<body>
    <div class="my-5 container text-center">
        <h1>URL Shortner <img src="img/logo.png" alt="" width="40px"></h1>
        <div class="my-5">
            <form action="/" method="post">
                <div class="row text-center d-flex justify-content-center">
                    <div class="col-lg-8 col-md-10 col-12">
                        <input class="form-control form-control-lg" name="longURL" type="text" placeholder="URL">
                    </div>
                </div>
                <button class="my-3 btn btn-dark"type="submit">Shrink</button>
            </form>
        </div>
        <table class="my-5 table thead-dark table-striped">
            <thead>
                <tr>
                    <th>Full URL</th>
                    <th>Short URL</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><a href="https://gaminggeeks.online/about">https://gaminggeeks.online/about</a></td>
                    <td><a href="https://bit.ly/3p3mSAW">https://bit.ly/3p3mSAW</a></td>
                </tr>
            </tbody>

        <table/>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
